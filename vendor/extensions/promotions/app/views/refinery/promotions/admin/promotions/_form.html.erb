<%= form_for [refinery, :promotions_admin, @promotion] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @promotion,
              :include_object_name => true %>

  
  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title, :class => 'larger widest'  -%>

  </div>
  
  <div class='field'>
    <%= f.label :promotion -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :promotion_id,
               :image => @promotion.promotion,
               :toggle_image_display => false %>

  </div>
  
  <div class='field'>
    <%= f.label :url, "Promo Link" -%>
    <%= f.text_field :url, :class => 'widest'  -%>

  </div>
  
  <div class='field'>
    <%= f.label :active -%>
    <%= f.check_box :active, :checked => @promotion[:active]  -%>

  </div>
  
  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.promotions.admin.promotions.promotion'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @promotion.title) %>
<% end -%>
